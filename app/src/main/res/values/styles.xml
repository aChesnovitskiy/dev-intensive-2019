<resources>

    <style name="Profile">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Profile.EditText" parent="Profile">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingTop">@dimen/spacing_tiny_4</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Profile.EditText.Single" parent="Profile.EditText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Profile.EditText.MultiLine" parent="Profile.EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLength">128</item>
    </style>

    <style name="Profile.Header" parent="Profile">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Profile.Header.Nickname" parent="Profile.Header">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/font_large_20</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>

    <style name="Profile.Header.Rank" parent="Profile.Header">
        <item name="android:textSize">@dimen/font_normal_16</item>
    </style>

    <style name="Profile.Metrics" parent="Profile">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Profile.Metrics.Label" parent="Profile.Metrics">
        <item name="android:textSize">@dimen/font_normal_16</item>
    </style>

    <style name="Profile.Metrics.Value" parent="Profile.Metrics">
        <item name="android:drawablePadding">@dimen/spacing_tiny_4</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="Profile.InfoItem">
        <item name="android:paddingTop">@dimen/spacing_normal_16</item>
        <item name="android:paddingStart">@dimen/spacing_normal_16</item>
        <item name="android:paddingEnd">@dimen/spacing_normal_16</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:minHeight">@dimen/spacing_maximum_72</item>
    </style>

    <!-- Splash-screen theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ActivityTransitions" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_up</item>
        <item name="android:activityCloseEnterAnimation">@anim/idle</item>
        <item name="android:activityOpenExitAnimation">@anim/idle</item>
        <item name="android:activityCloseExitAnimation">@anim/bottom_down</item>
    </style>

    <style name="ChatItem" />

    <style name="ChatItem.Username">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ChatItem.Username.Light">
        <item name="android:textColor">@color/color_title</item>
    </style>

    <style name="ChatItem.Username.Dark">
        <item name="android:textColor">@color/color_title_night</item>
    </style>

    <style name="ChatItem.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ChatItem.Title.Light">
        <item name="android:textColor">@color/color_title</item>
    </style>

    <style name="ChatItem.Title.Dark">
        <item name="android:textColor">@color/color_title_night</item>
    </style>

    <style name="ChatItem.Subtitle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ChatItem.Subtitle.Light">
        <item name="android:textColor">@color/color_subtitle</item>
    </style>

    <style name="ChatItem.Subtitle.Dark">
        <item name="android:textColor">@color/color_subtitle_night</item>
    </style>

    <style name="ChatItem.Date">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ChatItem.Date.Light">
        <item name="android:textColor">@color/color_subtitle</item>
    </style>

    <style name="ChatItem.Date.Dark">
        <item name="android:textColor">@color/color_subtitle_night</item>
    </style>

</resources>
