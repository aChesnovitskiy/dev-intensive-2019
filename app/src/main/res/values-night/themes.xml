<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent_night</item>

        <!-- FAB colors -->
        <item name="colorSecondary">@color/color_accent_night</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="colorAccentedSurface">@color/color_divider_dark</item>
        <item name="colorIcon">@android:color/white</item>
        <item name="colorDivider">@color/color_divider_dark</item>
        <item name="android:statusBarColor">@android:color/black</item>

        <item name="android:colorBackground">@color/color_background_night</item>

        <item name="bgCounterColor">@color/color_gray_dark</item>
        <item name="bgIndicatorColor">@color/color_accent_night</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>

        <item name="chatItemSwipeBackgroundColor">@color/color_accent_night</item>
        <item name="userSelectedColor">@color/color_accent_night</item>

        <item name="chatItemTitleStyle">@style/ChatItem.Title.Dark</item>
        <item name="chatItemSubtitleStyle">@style/ChatItem.Subtitle.Dark</item>
        <item name="chatItemUsernameStyle">@style/ChatItem.Username.Dark</item>
        <item name="chatItemDateStyle">@style/ChatItem.Date.Dark</item>

        <item name="snackbarBackgroundColor">@android:color/white</item>
        <item name="snackbarActionTextColor">@color/color_accent_night</item>

        <item name="clearedItemColor">@color/color_background_night</item>
        <item name="selectedItemColor">@color/color_dk_gray</item>

        <item name="colorChipClose">@color/color_gray</item>
    </style>

</resources>